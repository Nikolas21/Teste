<div class="row">
  <div class="col-lg-8">
    <div class="page-header">
      <h1 id="tables">Cursos da UFAM</h1>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="row">
      <div class="page-header">

        <a href="/curso/create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;&nbsp; Adicionar</a>

      </div>
    </div>
  </div>
</div>
<div class="row mt-4">
  <div class="col-lg-12">
    <div class=" bs-component">
      <table class="table table-hover">
        <thead>
          <tr class="table-active">
            <th scope="col">Sigla</th>
            <th scope="col">Nome</th>
            <th scope="col">Opções</th>
          </tr>
        </thead>
        {{#each cursos}}
        <tbody>
          <tr class="table-secondary">
            <td>{{sigla}}</td>
            <td>{{nome}}</td>
            <td> <a style="color:white;" href="/curso/read/{{id}}" class="fas fa-eye"></a>&nbsp;&nbsp;&nbsp;<a
                style="color:white;" href="/curso/update/{{id}}" class="fas fa-pencil-alt"></a>&nbsp;&nbsp;&nbsp;<a
                style="color:white;" href="/curso/remove/{{id}}" class="fas fa-trash-alt "></a></td>
          </tr>

        </tbody>
        {{/each}}
      </table>
    </div>

  </div>
</div>