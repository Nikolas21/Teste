<div class="container">
  <div id="adicionar-curso" class="bs-docs-section">
    <div class="col-lg-6 mx-auto">
      <div class="row flex-nowrap">
        <div class="col-lg-8">
          <h1 class="float-left">Adicionar Curso</h1>
        </div>
        <div class="col-lg-4 align-self-center">
          <a role="button" href="/curso/index" class="btn btn-secondary"><i
                        class="fas fa-arrow-left"></i>&nbsp;&nbsp;Voltar</a>
          </a>
        </div>
      </div>
      <form method="post" action="/curso/create">
      <div class="form-group">
          <label for="sigla">Sigla</label>
          <input name="sigla" id="sigla" type="text" placeholder="IE08" class="form-control {{#if errors}}is-invalid{{/if}}" value="{{curso.sigla}}">
          <div class="invalid-feedback">{{showError errors 'sigla'}}</div>
      </div>
      <div class="form-group">
          <label for="nome">Nome</label>
          <input name="nome" id="nome" type="text" placeholder="ABC" class="form-control {{#if errors}}is-invalid{{/if}}" value="{{curso.nome}}">
          <div class="invalid-feedback">{{showError errors 'nome'}}</div>    
      </div>
      <div class="form-group">
          <label for="descricao">Descrição do curso</label>
          <input name="descricao" id="descricao" type="text" placeholder="Alguma descricao" class="form-control" value="{{curso.descricao}}">
      </div>
      <br>
      <h3>Área de Conhecimento</h3>
      <div class="form-group">
        {{#each areas}}
          <input class="align-middle" type="radio" name="area_id" id="area_id" value="{{id}}"> {{nome}}<br>
        {{/each}}
        <div class="invalid-feedback {{#if errors}}d-block{{/if}}">{{showError errors 'area_id'}}</div>
      </div>
      <div class="form-group pt-2">
        <div class="col-lg-6 mx-auto">
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button id="criar-curso" type="submit" class="btn btn-primary btn-lg btn-block">
            <span class="button-text">Criar curso</span>
          </button>
        </div>
      </div>
    </form>
    </div>
  </div>
</div>
        